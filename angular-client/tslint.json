{
    "extends": "tslint:latest",
    "rules": {
        "ordered-imports": [true, {"import-sources-order": "lowercase-last", "named-imports-order": "lowercase-first"}],
        "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-type"],
        "no-string-literal": false,
        "no-reference": false,
        "no-var-requires": false,
        "interface-name": false,
        "max-line-length": [true, 140],
        "member-ordering": [true,
            "variables-before-functions"
        ],
        "no-unused-variable": true,
        "variable-name": [true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "no-bitwise": false,
        "object-literal-key-quotes": "consistent",
        "object-literal-sort-keys": false,
        "prefer-const": false
    }
}
